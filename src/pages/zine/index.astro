---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

interface Zine {
  volume: number;
  title: string;
}

const issues: Zine[] = [
  { volume: 1, title: "Z1: Identities" },
  { volume: 2, title: "Z2: Summer 2020" },
  { volume: 3, title: "Z3: Gratitude" },
  { volume: 4, title: "Z4: Spirituality" },
  { volume: 5, title: "Z5: Sound" },
  { volume: 6, title: "Z6: Work" },
  { volume: 7, title: "Z7: Play" },
  { volume: 8, title: "Z8: Apocalypse" },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Soupbone Zines</h1>
      <section>
        <ul>
          {
            issues.map((issue) => (
              <li>
                <a href={`/zine/z${issue.volume}/`}>{issue.title}</a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
