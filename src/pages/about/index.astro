---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

import * as statement from "./statement.md";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style></style>
  </head>
  <body>
    <Header />
    <main>
      <section>
        <h1>{statement.frontmatter.title}</h1>
        <h3>{statement.frontmatter.description}</h3>
        <Fragment set:html={statement.compiledContent()} />
      </section>
    </main>
    <Footer />
  </body>
</html>
