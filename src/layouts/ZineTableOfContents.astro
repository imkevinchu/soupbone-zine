---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import TableOfContents from "../components/TableOfContents.astro";

interface Props {
  zineIssue: string;
  zineTitle: string;
}

const { zineIssue, zineTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li time {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
      h1 {
        margin-bottom: 0;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>{zineTitle}</h1>
      <slot />
      <TableOfContents zineIssue={zineIssue} />
    </main>
    <Footer />
  </body>
</html>
